{% extends "base.html.twig" %}

{% block title %} {{post.title }} {% endblock %}

{% block body %}
  
    <h1 class="mt-5 mb-3 text-center"> {{post.title|capitalize }} </h1>
    <p class="fst-italic mb-5 text-center"> Article publié le {{ post.createdAt|date('d/m/Y') }} </p>
    {% if post.thumbnail %}
			<img class="rounded-t-lg" src="{{ vich_uploader_asset(post.thumbnail, 'imageFile') }}" alt="{{ post.thumbnail.imageName }}">
		{% endif %}
    <p>{{post.content|raw }}</p>
    <p class="fst-italic mt-5">Dernière mis à jour le {{ post.updatedAt|date('d/m/Y') }} </p>


    <button class="btn btn-primary mt-4">
        <a href="{{ path('app_post_index') }}">
            Retourner au blog
        </a>
    </button>

{% endblock %}